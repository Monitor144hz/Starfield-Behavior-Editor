<UserControl x:Class="BehaviorEditor.MVVM.View.Controls.ApplicationFlowBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BehaviorEditor.MVVM.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="{StaticResource ControlColor}" Height="50">
            <Button Command ="{Binding LoadCommand}" Style="{StaticResource PrimaryButtonStyle}">
                <Image Source="..\..\..\Assets\GUI\load.png" RenderOptions.BitmapScalingMode="Fant" Width="40"></Image>
                
            </Button>
            <Button Command="{Binding SaveCommand}" Style="{StaticResource PrimaryButtonStyle}">
                <Image Source="..\..\..\Assets\GUI\save.png" RenderOptions.BitmapScalingMode="Fant" Width="40"></Image>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
